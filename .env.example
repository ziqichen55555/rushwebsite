# Rush Car Rental 环境变量示例文件
# 复制此文件到 .env 并根据您的环境进行修改

# 环境设置
DJANGO_ENVIRONMENT=development  # development, testing, production

# 开发环境数据库设置
USE_POSTGRES=False  # 是否使用PostgreSQL，False则使用SQLite
DEV_DB_NAME=rush_car_rental
DEV_DB_USER=postgres
DEV_DB_PASSWORD=postgres
DEV_DB_HOST=localhost
DEV_DB_PORT=5432

# 生产环境数据库设置 (适用于Azure Cosmos DB PostgreSQL接口)
# DATABASE_URL=postgres://username:password@hostname:port/database_name
# 或者单独配置
# COSMOS_DB_NAME=dbname
# COSMOS_DB_USER=username
# COSMOS_DB_PASSWORD=password
# COSMOS_DB_HOST=host.postgres.database.azure.com
# COSMOS_DB_PORT=5432

# Stripe支付设置
VITE_STRIPE_PUBLIC_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key

# 安全设置
SECRET_KEY=django-insecure-development-key-change-in-production
SITE_DOMAIN=rushcarrental.com

# Azure存储设置 (生产环境)
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# AZURE_STORAGE_KEY=your_storage_key
# AZURE_ACCOUNT_NAME=your_account_name
# AZURE_STATIC_CONTAINER=static
# AZURE_CDN_DOMAIN=cdn.yourdomain.com

# 邮件设置 (生产环境)
# EMAIL_HOST=smtp.yourprovider.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@example.com
# EMAIL_HOST_PASSWORD=your_email_password
# DEFAULT_FROM_EMAIL=no-reply@rushcarrental.com
